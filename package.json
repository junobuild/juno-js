{
  "name": "@junobuild/juno-js",
  "version": "0.0.23",
  "description": "JavaScript libraries for interfacing with Juno",
  "author": "David Dal Busco (https://daviddalbusco.com)",
  "license": "MIT",
  "scripts": {
    "declarations": "node ./scripts/declarations.mjs && npm run format",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --max-warnings 0 .",
    "build": "npm run build --workspaces",
    "size": "size-limit --json"
  },
  "workspaces": [
    "packages/core",
    "packages/admin",
    "packages/ledger"
  ],
  "devDependencies": {
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@size-limit/esbuild": "^8.2.4",
    "@size-limit/preset-small-lib": "^8.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "esbuild": "^0.18.3",
    "eslint": "^8.42.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.2",
    "typescript": "^5.0.4"
  },
  "size-limit": [
    {
      "name": "@junobuild/admin",
      "path": "./packages/admin/dist/index.js",
      "limit": "95 kB"
    },
    {
      "name": "@junobuild/core",
      "path": "./packages/core/dist/index.js",
      "limit": "110 kB"
    },
    {
      "name": "@junobuild/ledger",
      "path": "./packages/ledger/dist/index.js",
      "limit": "7 kB",
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal"
      ]
    }
  ]
}
