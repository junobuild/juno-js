{
  "name": "@junobuild/juno-js",
  "version": "0.0.99",
  "description": "JavaScript libraries for interfacing with Juno",
  "author": "David Dal Busco (https://daviddalbusco.com)",
  "license": "MIT",
  "scripts": {
    "declarations": "node ./scripts/declarations.mjs && npm run format",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --max-warnings 0 .",
    "prepare": "./scripts/license.sh",
    "build": "npm run build --workspaces",
    "size": "size-limit --json",
    "update:agent": "./scripts/update-agent",
    "docs": "node scripts/docs.js && prettier --write packages/**/README.md",
    "test": "vitest"
  },
  "workspaces": [
    "packages/utils",
    "packages/config",
    "packages/storage",
    "packages/core",
    "packages/admin",
    "packages/analytics",
    "packages/core-peer",
    "packages/core-standalone",
    "packages/cli-tools",
    "packages/did-tools",
    "packages/config-loader",
    "packages/console"
  ],
  "devDependencies": {
    "@dfinity/eslint-config-oisy-wallet": "^0.0.6",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@size-limit/esbuild": "^11.1.6",
    "@size-limit/preset-small-lib": "^11.1.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "esbuild": "^0.24.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "tsdoc-markdown": "^0.6.3",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  },
  "size-limit": [
    {
      "name": "@junobuild/admin",
      "path": "./packages/admin/dist/index.js",
      "limit": "15 kB",
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal",
        "@dfinity/utils",
        "@dfinity/ic-management",
        "@junobuild/utils",
        "semver"
      ]
    },
    {
      "name": "@junobuild/core",
      "path": "./packages/core/dist/index.js",
      "limit": "10 kB",
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal",
        "@dfinity/auth-client"
      ]
    },
    {
      "name": "@junobuild/core-worker",
      "path": "./packages/core/dist/workers/auth.worker.js",
      "limit": "55 kB"
    },
    {
      "name": "@junobuild/core-peer",
      "path": "./packages/core-peer/dist/index.js",
      "limit": "10 kB",
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal",
        "@dfinity/auth-client"
      ]
    },
    {
      "name": "@junobuild/core-standalone",
      "path": "./packages/core-standalone/dist/index.js",
      "limit": "85 kB"
    },
    {
      "name": "@junobuild/utils",
      "path": "./packages/utils/dist/index.js",
      "limit": "1 kB",
      "ignore": [
        "@dfinity/principal"
      ]
    },
    {
      "name": "@junobuild/analytics",
      "path": "./packages/analytics/dist/index.js",
      "limit": "10 kB",
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal"
      ]
    },
    {
      "name": "@junobuild/analytics-worker",
      "path": "./packages/analytics/dist/workers/analytics.worker.js",
      "limit": "85 kB"
    },
    {
      "name": "@junobuild/config",
      "path": "./packages/config/dist/index.js",
      "limit": "30 B"
    },
    {
      "name": "@junobuild/console",
      "path": "./packages/console/dist/index.js",
      "limit": "5 kB",
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal",
        "@junobuild/utils",
        "semver"
      ]
    },
    {
      "name": "@junobuild/storage",
      "path": "./packages/storage/dist/index.js",
      "limit": "5 kB",
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal"
      ]
    }
  ]
}
