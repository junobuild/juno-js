{
  "name": "@junobuild/juno-js",
  "version": "220",
  "description": "JavaScript libraries for interfacing with Juno",
  "author": "David Dal Busco (https://daviddalbusco.com)",
  "license": "MIT",
  "scripts": {
    "declarations": "node ./scripts/declarations.mjs && ./scripts/functions.idl.sh && npm run format",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --max-warnings 0 .",
    "prepare": "./scripts/license.sh",
    "build": "npm run build --workspaces",
    "size": "size-limit --json",
    "update:agent": "./scripts/update-agent",
    "update:ic-js": "./scripts/update-ic-js",
    "docs": "node scripts/docs.js && prettier --write packages/**/README.md",
    "test": "vitest",
    "clean": "npm run clean --workspaces --if-present",
    "e2e": "NODE_ENV=development playwright test",
    "e2e:ci": "playwright test --reporter=html",
    "e2e:snapshots": "playwright test --update-snapshots --reporter=list",
    "e2e:snapshots:local": "NODE_ENV=development playwright test --update-snapshots --reporter=list",
    "e2e:report": "playwright show-report",
    "e2e:playwright:install": "playwright install chromium --with-deps"
  },
  "workspaces": [
    "packages/utils",
    "packages/errors",
    "packages/config",
    "packages/ic-client",
    "packages/storage",
    "packages/auth",
    "packages/cdn",
    "packages/core",
    "packages/admin",
    "packages/analytics",
    "packages/core-peer",
    "packages/core-standalone",
    "packages/cli-tools",
    "packages/did-tools",
    "packages/config-loader",
    "packages/functions"
  ],
  "devDependencies": {
    "@dfinity/eslint-config-oisy-wallet": "^0.2.3",
    "@dfinity/internet-identity-playwright": "^3.0.0-next-2026-02-02",
    "@icp-sdk/bindgen": "^0.2.1",
    "@playwright/test": "^1.58.2",
    "@size-limit/esbuild": "^11.2.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "esbuild": "^0.27.3",
    "fake-indexeddb": "^6.2.5",
    "jsdom": "^28.0.0",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "tsdoc-markdown": "^1.4.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "vitest-mock-extended": "^3.1.0"
  },
  "engines": {
    "node": ">=24",
    "npm": ">=11.5.1 <12.0.0"
  },
  "size-limit": [
    {
      "name": "@junobuild/admin",
      "path": "./packages/admin/dist/index.js",
      "limit": "15 kB",
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@icp-sdk/canisters",
        "@dfinity/identity",
        "@dfinity/principal",
        "@icp-sdk/core",
        "@dfinity/utils",
        "@junobuild/config",
        "@junobuild/ic-client",
        "semver",
        "zod"
      ]
    },
    {
      "name": "@junobuild/core",
      "path": "./packages/core/dist/index.js",
      "limit": "20 kB",
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/identity",
        "@dfinity/principal",
        "@dfinity/auth-client",
        "@icp-sdk/core",
        "@icp-sdk/auth",
        "@dfinity/utils"
      ]
    },
    {
      "name": "@junobuild/core-worker",
      "path": "./packages/core/dist/workers/auth.worker.js",
      "limit": "55 kB"
    },
    {
      "name": "@junobuild/core-standalone",
      "path": "./packages/core-standalone/dist/index.js",
      "limit": "90 kB"
    },
    {
      "name": "@junobuild/utils",
      "path": "./packages/utils/dist/index.js",
      "limit": "5 kB",
      "ignore": [
        "@dfinity/utils"
      ]
    },
    {
      "name": "@junobuild/errors",
      "path": "./packages/errors/dist/index.js",
      "limit": "5 kB"
    },
    {
      "name": "@junobuild/functions",
      "path": "./packages/functions/index.js",
      "limit": "5 kB",
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/identity",
        "@dfinity/principal",
        "@icp-sdk/core",
        "@dfinity/utils",
        "zod"
      ]
    },
    {
      "name": "@junobuild/analytics",
      "path": "./packages/analytics/dist/index.js",
      "limit": "15 kB"
    },
    {
      "name": "@junobuild/config",
      "path": "./packages/config/dist/index.js",
      "limit": "10 kB",
      "ignore": [
        "zod",
        "@dfinity/zod-schemas"
      ]
    },
    {
      "name": "@junobuild/auth/delegation",
      "path": "./packages/auth/delegation.js",
      "limit": "10 kB",
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/identity",
        "@dfinity/principal",
        "@icp-sdk/core",
        "@dfinity/utils",
        "@junobuild/ic-client"
      ]
    },
    {
      "name": "@junobuild/auth/automation",
      "path": "./packages/auth/automation.js",
      "limit": "10 kB",
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/identity",
        "@dfinity/principal",
        "@icp-sdk/core",
        "@dfinity/utils",
        "@junobuild/ic-client"
      ]
    },
    {
      "name": "@junobuild/cdn",
      "path": "./packages/cdn/dist/index.js",
      "limit": "5 kB",
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/identity",
        "@dfinity/principal",
        "@icp-sdk/core",
        "@dfinity/utils",
        "@icp-sdk/canisters",
        "@junobuild/config",
        "@junobuild/storage",
        "@junobuild/ic-client",
        "semver"
      ]
    },
    {
      "name": "@junobuild/storage",
      "path": "./packages/storage/dist/index.js",
      "limit": "5 kB",
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/identity",
        "@dfinity/principal",
        "@icp-sdk/core",
        "@dfinity/utils",
        "@junobuild/utils",
        "@junobuild/ic-client"
      ]
    },
    {
      "name": "@junobuild/ic-client/actor",
      "path": "./packages/ic-client/actor.js",
      "limit": "15 kB",
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/identity",
        "@dfinity/principal",
        "@icp-sdk/core",
        "@dfinity/utils"
      ]
    },
    {
      "name": "@junobuild/ic-client/webauthn",
      "path": "./packages/ic-client/webauthn.js",
      "limit": "5 kB",
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/identity",
        "@dfinity/principal",
        "@icp-sdk/core",
        "@dfinity/utils"
      ]
    },
    {
      "name": "@junobuild/ic-client/utils",
      "path": "./packages/ic-client/utils.js",
      "limit": "1 kB",
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/identity",
        "@dfinity/principal",
        "@icp-sdk/core",
        "@dfinity/utils"
      ]
    }
  ]
}
